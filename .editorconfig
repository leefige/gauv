# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# a newline ending every file
[*]
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.py]
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
